{% extends 'base.html.twig' %}

{% block title %}Niveau de compétence{% endblock %}

{% block body %}
    <h1>Niveau de compétence</h1>
    <nav class="details_nav">
    <a href="{{ path('skill_index') }}" class="btn">Retour à la liste</a>
    <a href="{{ path('skill_edit', {'id': skill.id}) }}" class="btn">Modifier</a>   
    {{ include('back/skill/_delete_form.html.twig') }}
    
    </nav>
    <table class="table_show">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ skill.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ skill.name }}</td>
            </tr>
            <tr>
                <th>Plantes</th>
                <td>{% for plants in skill.plants.snapshot %}
                <a class="btnplantindex" href="/plant/{{ plants.id }}">{{ plants }}</a> <br>
                {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>
{% endblock %}
