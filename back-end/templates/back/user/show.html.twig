{% extends 'base.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}
    <h1>Un utilisateur super sympa</h1>
    <nav class="details_nav">
    <a href="{{ path('user_index') }}" class="btn">Retour à la liste</a>
    <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn">Modifier</a>   
    {{ include('back/user/_delete_form.html.twig') }}
    
    </nav>
    <table class="table_show">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Pseudo</th>
                <td>{{ user.pseudo }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Avatar</th>
                <td>{% if user.avatar != null %}
                <img src="{{ asset('images/avatar/' ~ user.avatar ) }}" width="200px" /> 
                {% else %}
                <img src="{{ asset('images/homepage/IMG_0064.PNG' ) }}" width="200px" />
                {% endif %}
                </td>
            </tr>
            <tr>
                <th>Rôle</th>
                <td>{% for roles in user.roles %}
                    {{ roles }} <br>
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Plantes</th>
                <td>{% for plant in plants %}
                    {% if plant is defined %}
                    <a class="btnplantindex" href="/plant/{{ plant.id }}">{{ plant.name }}</a>
                    {% endif %}
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date de la dernière modification</th>
                <td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}
